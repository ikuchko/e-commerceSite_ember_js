
<div class="row">
  <div class="col-md-9">
    <form>
      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id=category placeholder="Junk title" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="title">title</label>
        {{input value=title id=title placeholder="Junk title" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="price">price</label>
        {{input value=price id=price placeholder="Junk title" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="description">description</label>
        {{textarea value=description id=description rows="10" cols="80" placeholder="Introduce your junk..." class="form-control"}}
      </div>
      <div class="form-group">
        <label for="image">image</label>
        {{input value=image id=image placeholder="image link" class="form-control"}}
      </div>
      <button {{action 'save'}} class="btn btn-default">Save</button>
    </form>
  </div>
</div>
